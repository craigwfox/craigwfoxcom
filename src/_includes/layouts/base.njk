---
ogType: website
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - {{ metadata.title }}</title>
  <meta name="description" content="{{ description }}">

  <link rel="icon" href="{{ '/favicon.svg' | url }}">

  {# Manifest / PWA #}
  <meta name="theme-color" content="#172135">
  <link rel="mask-icon" href="{{ '/favicon.svg' | url }}" color="#172135">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/manifest.json">

  {# Open graph tags #}
  {% if permalink %}
    <link rel="canonical" href="{{ 'https://craigwfox.com' + permalink }}" />
  {% else %}
    <link rel="canonical" href="{{ metadata.url + page.url }}" />
  {% endif %}
  <meta property="og:title" content="{{ title }}" />
  <meta property="og:type" content="{{ ogType }}" />
  <meta property="og:description" content="{{ description }}">
  {% if permalink %}
    <meta property="og:url" content="{{ 'https://craigwfox.com' + permalink }}" />
  {% else %}
    <meta property="og:url" content="{{ metadata.url + page.url }}" />
  {% endif %}
  {% if ogImage %}
    <meta property="og:image" content="{{ site.baseUrl + ogImage }}" />
    <meta name="twitter:image:alt" content="{{ ogImageAlt }}">
  {% else %}
    <meta property="og:image" content="{{ site.baseUrl + 'img/twitter/open-graph-base.png' }}" />
    <meta name="twitter:image:alt" content="Craig Fox, front-end developer, maker, and geek">
  {% endif %}

  {# Feed / sitemap #}
  <link rel="alternate" href="{{ metadata.feed.url | url }}" type="application/atom+xml" title="{{ metadata.title }}" />
  <link rel="sitemap" href="{{ metadata.sitemap.url | url }}" type="application/atom+xml" title="{{ metadata.title }}" />

  <link rel="stylesheet" href="{{ '/css/styles.css' }}" />

  <script defer data-domain="craigwfox.com" src="https://plausible.io/js/plausible.js"></script>
</head>
<body data-theme="dark">
  <a href="#maincontent" class="skip-link">Skip to main content</a>

  <header class="site-header">
    <a href="/" class="site-logo">
      {% image
        "./src/images/craig-logo-red.svg",
        "Craig Fox UX Engineer",
        "(min-width: 18em) 50vw, 100vw",
        "logo"
      %}
    </a>

    <nav aria-label="Site navigation">
      <a href="/" {{ 'aria-current=page' if '/' === page.url }}>Home</a>
      <a href="/posts" {{ 'aria-current=page' if '/posts' in page.url }}>Blog</a>
      <a href="/about" {{ 'aria-current=page' if '/about' in page.url }}>About</a>
      <a href="/uses" {{ 'aria-current=page' if '/uses' in page.url }}>Uses</a>
    </nav>

    <div class="site-toggles">
      <button is="theme-switcher"
        modes="light, dark"
        dataAttr="data-theme"
        current="light"
        aria-label="Change to dark mode"
        aria-live="polite">

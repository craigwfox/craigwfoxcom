---
const { date } = Astro.props
const newDate = new Date(
	date.getTime() + Math.abs(date.getTimezoneOffset() * 60000)
)
---

<time datetime={newDate.toISOString()}>
	{
		newDate.toLocaleDateString("en-us", {
			timeZone: "UTC",
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
